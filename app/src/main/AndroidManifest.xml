<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.moravian.csci299.DungeonDomination">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/dungeon_explorer"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/dungeon_explorer_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DungeonDomination">
        <activity
            android:name="edu.moravian.csci299.DungeonDomination.StoreActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name="edu.moravian.csci299.DungeonDomination.SettingsActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name="edu.moravian.csci299.DungeonDomination.GameActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="edu.moravian.csci299.DungeonDomination.MenuActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="edu.moravian.csci299.DungeonDomination.MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>